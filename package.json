{
  "name": "opencode-lazy-loader",
  "version": "1.0.1",
  "description": "OpenCode plugin for lazy-loading skill-embedded MCP servers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "npx tsc",
    "watch": "npx tsc --watch",
    "clean": "rm -rf dist",
    "prepack": "npm run clean && npm run build"
  },
  "keywords": [
    "opencode",
    "plugin",
    "mcp",
    "skill"
  ],
  "author": "keybrdist",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keybrdist/opencode-lazy-loader.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@opencode-ai/plugin": "^1.1.23",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
}
